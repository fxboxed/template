{
  "name": "static-node-site",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Simple static Node/Express site with Pug, sessions, and required routes",
  "main": "app.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon app.js",
    "start": "NODE_ENV=production node app.js",
    "pm2": "NODE_ENV=production pm2 start app.js --name static-site --time",
    "pm2:reload": "pm2 reload static-site --update-env",
    "pm2:logs": "pm2 logs static-site",
    "pm2:save": "pm2 save",
    "stylus": "stylus  -w public/styls/main.styl -c -o public/css/main.css"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "express": "^4.21.2",
    "express-session": "^1.17.3",
    "pug": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.9"
  },
  "engines": {
    "node": ">=20"
  }
}
