// Cookie consent (minimal)
$spacing = 16px
$border-radius-sm = 10px
$border-radius-md = 12px
$border-radius-lg = 14px
$z-consent = 9999
$z-panel = 10000

.cconsent
  position: fixed
  left: $spacing
  right: $spacing
  bottom: $spacing
  z-index: $z-consent

  &__inner
    display: flex
    gap: $spacing
    align-items: center
    justify-content: space-between
    padding: 14px $spacing
    border-radius: $border-radius-md
    background: rgba(20, 20, 20, 0.95)
    color: #fff

  &__text p
    margin: 6px 0 0
    opacity: 0.9
    max-width: 720px

  &__actions
    display: flex
    gap: 10px
    flex-wrap: wrap

  &__btn
    cursor: pointer
    border-radius: $border-radius-sm
    border: 1px solid rgba(255, 255, 255, 0.25)
    padding: 10px 12px
    background: #fff
    color: #111
    font-weight: 700

    &--ghost
      background: transparent
      color: #fff

.cconsent-panel
  position: fixed
  inset: 0
  background: rgba(0, 0, 0, 0.6)
  z-index: $z-panel
  display: grid
  place-items: center
  padding: $spacing

  &__inner
    width: min(520px, 100%)
    background: #111
    color: #fff
    border-radius: $border-radius-lg
    padding: $spacing

  &__row
    display: flex
    gap: 10px
    align-items: center
    margin: 12px 0

  &__actions
    display: flex
    gap: 10px
    justify-content: flex-end
    margin-top: 12px

[hidden]
  display: none !important
