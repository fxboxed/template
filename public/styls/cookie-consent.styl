/* Cookie consent (minimal) */
.cconsent {
  position: fixed;
  left: 16px;
  right: 16px;
  bottom: 16px;
  z-index: 9999;
}
.cconsent__inner {
  display: flex;
  gap: 16px;
  align-items: center;
  justify-content: space-between;
  padding: 14px 16px;
  border-radius: 12px;
  background: rgba(20, 20, 20, 0.95);
  color: #fff;
}
.cconsent__text p {
  margin: 6px 0 0;
  opacity: 0.9;
  max-width: 720px;
}
.cconsent__actions {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
}
.cconsent__btn {
  cursor: pointer;
  border-radius: 10px;
  border: 1px solid rgba(255,255,255,0.25);
  padding: 10px 12px;
  background: #fff;
  color: #111;
  font-weight: 700;
}
.cconsent__btn--ghost {
  background: transparent;
  color: #fff;
}

.cconsent-panel {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.6);
  z-index: 10000;
  display: grid;
  place-items: center;
  padding: 16px;
}
.cconsent-panel__inner {
  width: min(520px, 100%);
  background: #111;
  color: #fff;
  border-radius: 14px;
  padding: 16px;
}
.cconsent-panel__row {
  display: flex;
  gap: 10px;
  align-items: center;
  margin: 12px 0;
}
.cconsent-panel__actions {
  display: flex;
  gap: 10px;
  justify-content: flex-end;
  margin-top: 12px;
}
[hidden] { display: none !important; }
