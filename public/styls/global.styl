* 
    margin 0
    padding 0
    box-sizing border-box
    max-width 100%
alpha = #3498db
beta =  #db7633
light = #fff
dark = #000
max-width = 1200px
body
    font-family 'Arial', sans-serif
    background alpha - 40%
    color #333
    //min-height 100vh

.site-main 
    //margin-top 4.1rem
    width 100%
    //background yellow
    padding 0
@media(min-width 960px)
    .site-main 
        padding 1rem 0
a
    text-decoration none
    color alpha
    &:hover
        color beta
p 
    color light
button 
    cursor pointer
    font-size 16px
    border none
    background transparent
    outline none
    &:hover
        opacity 0.9

    
    margin 0 auto
.txt-center
    text-align center