* 
    margin 0
    padding 0
    box-sizing border-box
    max-width 100%
alpha = #3498db
beta =  #db7633
light = #fff
dark = #000
max-width = 1200px
body
    font-family 'Arial', sans-serif
    //background-color red // #f5f5f5
    color #333
    min-height 100vh

main.site-main 
    display flex
    flex-direction column
    align-items center
    justify-content center
    //background pink
    width 100%
    //padding 2rem 1rem
    background alpha - 40%
    min-height calc(100vh - 60px)
a
    text-decoration none
    color alpha
    &:hover
        color beta
p 
    color light
button 
    cursor pointer
    font-size 16px
    border none
    background transparent
    outline none
    &:hover
        opacity 0.9
// Layout controls
.container
    width 100%
    max-width max-width
    //background blue
    
    margin 0 auto
.txt-center
    text-align center