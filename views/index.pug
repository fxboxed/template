//- views/index.pug
extends ./layout.pug
include ./mixins/responsive-grid-mixin.pug

  //- Page meta consumed by layout.pug
  - var siteName = "Aptati Arcade"
  - var title = "Aptati Arcade"
  - var description = "Snack-size games and daily puzzles on Aptati Arcade."
  - var canonical = "https://aptati.com/"
  - var ogImage = "/images/og/index-og_1200x675.webp"
  - var defaultOgImage = "/images/og/index-og_1200x675.webp"
  - var ogWidth = 1200
  - var ogHeight = 675

block content
  //- Optional visible hero image (not required for OG, but fine to keep)
  img(
    src="/images/og/index-og_1200x675.webp"
    alt="Aptati Arcade: playful games you can play online"
    loading="lazy"
    decoding="async"
  )

  +responsiveGrid("380px", 3, "1rem", "grid-item grid-item-card-link")
    a(href="/games/game1")
      img(
        src="/images/tiles/word-tile_1200x1200.webp"
        alt="Daily Word"
        loading="lazy"
        decoding="async"
      )
    a(href="/games/game2")
      img(
        src="/images/tiles/word-tile_1200x1200.webp"
        alt="Game 2"
        loading="lazy"
        decoding="async"
      )
    a(href="/games/game3")
      img(
        src="/images/og/index-og_1200x675.webp"
        alt="Game 3"
        loading="lazy"
        decoding="async"
      )

  h3 1st commit
  +responsiveGrid("380px", 3, ".4rem", "grid-item grid-item-special")
    span Node.js static template using Express, Pug and Stylus.
    span 404 page is active.
    span.special Basic routing is functional.
    span Header and footer partials (both with own navigation).
    span All content is stored on the server and rendered using Pug.
    span Responsive modular grid mixin. accepts min width, max columns, gap and class name(s).
    span Responsive navigation partial
    span Light, dark, alpha, beta color mixins
    span Basic SEO and Open Graph meta tags in layout.pug
    span Contact modal partial